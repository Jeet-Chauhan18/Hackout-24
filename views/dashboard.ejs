<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
</head>
<body>
    <h1>Your Repositories</h1>
    <form action="/repo/create" method="POST">
        <input type="text" name="name" placeholder="Repository Name" required><br>
        <textarea name="description" placeholder="Repository Description"></textarea><br>
        <button type="submit">Create Repository</button>
    </form>

    <h2>Your Repositories</h2>
    <ul>
        <% repos.forEach(repo => { %>
            <li>
                <strong><%= repo.name %></strong>: <%= repo.description %> 
                (<%= repo.likes %> likes)
                <form action="/repo/<%= repo._id %>/like" method="POST" style="display:inline;">
                    <button type="submit">Like</button>
                </form>
                <!-- File upload form -->
                <form action="/repo/<%= repo._id %>/upload" method="POST" enctype="multipart/form-data">
                    <input type="file" name="file" required>
                    <button type="submit">Upload</button>
                </form>
            </li>
            <% }) %>
        </ul>

    <a href="/auth/logout">Logout</a>
</body>
</html>
